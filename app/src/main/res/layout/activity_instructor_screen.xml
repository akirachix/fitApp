<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.InstructorScreen">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize">
                <ImageView
                    android:id="@+id/imgBackButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_backbutton_foreground" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="?actionBarSize"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imgBackButton"
                    android:gravity="center_vertical"
                    android:text="instructor"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:paddingStart="50dp"
                    />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <GridLayout
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="0dp"
            android:columnCount="2"
            android:rowCount="3"
            android:layout_marginTop="50dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cvInstructor1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp"
                android:layout_margin="10dp"
                android:layout_width="8dp"
                android:layout_height="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/lady2" />
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="?actionBarSize"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="40dp"
                        android:paddingStart="30dp"
                        android:text="Aliciana Nasaba"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="?actionBarSize"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="70dp"
                        android:gravity="center_vertical"
                        android:paddingStart="30dp"
                        android:text="Time  Available : 08am-10am."
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBook3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="200dp"
                        android:backgroundTint="@color/backgroundColor"
                        android:gravity="center_vertical"
                        android:paddingStart="30dp"
                        android:text="Book" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cvInstructor2"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp"
                android:layout_margin="10dp"
                android:layout_width="8dp"
                android:layout_height="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/man2" />
                    <TextView
                        android:id="@+id/tvName2"
                        android:layout_width="wrap_content"
                        android:layout_height="?actionBarSize"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="40dp"
                        android:paddingStart="30dp"
                        android:text="Jimmy  Wafula"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="?actionBarSize"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="40dp"
                        android:gravity="center_vertical"
                        android:paddingStart="30dp"
                        android:text="Time Available : 10am-12noon"
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBook2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="200dp"
                        android:backgroundTint="@color/backgroundColor"
                        android:gravity="center_vertical"
                        android:paddingStart="30dp"
                        android:text="Book" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvInstructor3"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp"
                android:layout_margin="10dp"
                android:layout_width="8dp"
                android:layout_height="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/man1" />
                    <TextView
                        android:id="@+id/tvName3"
                        android:layout_width="wrap_content"
                        android:layout_height="?actionBarSize"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="40dp"
                        android:paddingStart="30dp"
                        android:text="Patrick Kevin"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="?actionBarSize"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:text="Time Available : 02pm-04pm"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:paddingStart="30dp"
                        android:layout_marginTop="40dp"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBook1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="200dp"
                        android:backgroundTint="@color/backgroundColor"
                        android:gravity="center_vertical"
                        android:paddingStart="30dp"
                        android:text="Book" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cvInstructor4"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp"
                android:layout_margin="10dp"
                android:layout_width="8dp"
                android:layout_height="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/lady1" />
                    <TextView
                        android:id="@+id/tvName4"
                        android:layout_width="wrap_content"
                        android:layout_height="?actionBarSize"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="40dp"
                        android:paddingStart="30dp"
                        android:text="Patience  Liz"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="?actionBarSize"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:text="Time Available : 04pm-07pm"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:paddingStart="30dp"
                        android:layout_marginTop="40dp"
                        />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Book"
                        android:layout_marginLeft="40dp"
                        android:paddingStart="30dp"
                        android:layout_marginTop="200dp"
                        android:backgroundTint="@color/backgroundColor"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

